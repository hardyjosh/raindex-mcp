{
  "name": "raindex-mcp",
  "version": "0.1.0",
  "description": "MCP server for Raindex orderbook SDK",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "raindex-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/ test/",
    "fmt": "prettier --write 'src/**/*.ts' 'test/**/*.ts'",
    "fmt:check": "prettier --check 'src/**/*.ts' 'test/**/*.ts'"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@rainlanguage/orderbook": "^0.0.1"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "eslint": "^9.0.0",
    "@eslint/js": "^9.0.0",
    "typescript-eslint": "^8.0.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=22"
  }
}
